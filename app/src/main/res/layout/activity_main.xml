<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:padding="30dp">
    <TextView
        android:id="@+id/text1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textSize="22sp"
        android:gravity="center"
        android:text="한글"
        app:layout_constraintRight_toLeftOf="@+id/Change"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageButton
        android:id="@+id/Change"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        app:srcCompat="@drawable/change"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
    <TextView
        android:id="@+id/text2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textSize="22sp"
        android:gravity="center"
        android:text="영어"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/Change"/>
    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#D3D3D3"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/Change"/>
    <EditText
        android:id="@+id/input"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_weight="15"
        android:hint="번역 내용 입력"
        android:textSize="23sp"
        android:ems="10"
        android:gravity="start|top"
        android:padding="12dp"
        android:inputType="textMultiLine"
        android:background="@android:color/transparent"
        app:layout_constraintTop_toBottomOf="@+id/line"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
     />
    <View
        android:id="@+id/line2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#D3D3D3"
        app:layout_constraintTop_toBottomOf="@+id/input"/>

    <TextView
        android:id="@+id/changedText"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_weight="15"
        android:textSize="23sp"
        android:ems="10"

        android:gravity="start|top"
        android:padding="12dp"
        android:inputType="textMultiLine"
        android:background="@android:color/transparent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/line2"/>

    <Button
        android:id="@+id/voice"
        android:background="@drawable/ic_baseline_keyboard_voice_24"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:backgroundTint="#000000"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginBottom="100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/hedset">

    </Button>
    <Button
        android:id="@+id/hedset"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginBottom="100dp"
        android:background="@drawable/ic_baseline_headset_24"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/voice">

    </Button>
    <TextView
        android:id="@+id/voiceext"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="음성인식"
        android:gravity="center"
        android:layout_marginTop="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/hedsettext"
        app:layout_constraintTop_toBottomOf="@+id/voice">

    </TextView>
    <TextView
        android:id="@+id/hedsettext"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="듣기"
        android:gravity="center"
        android:layout_marginTop="20dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/voiceext"
        app:layout_constraintTop_toBottomOf="@+id/voice">

    </TextView>
</androidx.constraintlayout.widget.ConstraintLayout>